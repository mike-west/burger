<div class="container">
  <h1 class="heading h1">Eat-Da-Burger!</h1>

  <h2 class="heading h2">I devoured these!</h2>

  <ul class="list-group">
    {{#each data}} {{#if devoured}} {{> burger/burger-block devoured=true}} {{/if}} {{/each}}
  </ul>

  <h2 class="heading h2">Still to eat</h2>

  <ul class="list-group">
    {{#each data}} {{#unless devoured}} {{> burger/burger-block devoured=false}} {{/unless}} {{/each}}
  </ul>
  <br>
  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="bu">Burger Name:</label>
      <input type="text" id="bu" name="name">
    </div>

    <div class="form-group">
      <label for="devoured">Devoured?</label>
      <br>
      <input type="radio" name="devoured" value="1" checked> Devoured!
      <br>
      <input type="radio" name="devoured" value="0"> Haven't tried yet
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>